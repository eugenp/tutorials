<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c{1}] - %m%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger: Set to INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>