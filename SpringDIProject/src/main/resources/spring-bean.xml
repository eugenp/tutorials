<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:annotation-config />


	<context:component-scan base-package="com.abir.spring" />
	<bean id="beanToBeInjected" class="com.abir.spring.BeanToBeInjectedImpl" />
	<bean id="constructorBasedInjection" class="com.abir.spring.ConstructorBasedInjection">
		<!-- <constructor-arg ref="beanToBeInjected" -->
		<!-- type="com.abir.spring.BeanToBeInjected"> -->
		<!-- </constructor-arg> -->
	</bean>

	<bean id="beanTakingInjection" class="com.abir.spring.BeanTakingInjection">
		<property name="beantoBeInjected" ref="beanToBeInjected" />
	</bean>

</beans>