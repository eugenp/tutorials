<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property> -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <!--  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/db1</property>-->
        <property name="hibernate.connection.url">jdbc:h2:mem:db1db;DATABASE_TO_UPPER=false;</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="connection.password"/>
        <!--  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>-->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.multiTenancy">DATABASE</property>
        <property name="hbm2ddl.auto">create</property>         
        <property name="show_sql">true</property>
        <mapping resource="com/baeldung/hibernate/config/Suppliers.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
