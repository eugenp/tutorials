<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
       ">

    <context:component-scan base-package="com.sishuok"/>

    <mvc:annotation-driven>
        <mvc:return-value-handlers>
            <bean class="com.sishuok.bigpipe.handler.BigpipeTaskReturnValueHandler"/>
        </mvc:return-value-handlers>
    </mvc:annotation-driven>

    <mvc:default-servlet-handler/>

    <mvc:resources mapping="/static/**" location="/static/"/>


    <bean id="velocityConfig" class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
    </bean>

    <bean class="com.sishuok.bigpipe.finder.DefaultPageletFinder"/>
    <bean class="com.sishuok.bigpipe.view.velocity.VelocityPageletViewResolver">
        <property name="prefix" value="bigpipe/"/>
        <property name="suffix" value=".vm"/>
        <property name="encoding" value="utf-8"/>
        <property name="contentType" value="text/html;charset=utf-8"/>
    </bean>

    <bean id="defaultViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="contentType" value="text/html"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>