<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="ship" class="org.baeldung.bean.injection.Ship">
		<constructor-arg>
			<ref bean="helm" />
		</constructor-arg>
	</bean>
	
	<bean id="MyEntertainmentCenter" class="org.baeldung.bean.injection.tv.MyEntertainmentCenter">
		<constructor-arg>
			<ref bean="VerizonFiosTvProvider" />
		</constructor-arg>
	</bean>

	<bean id="helm" class="org.baeldung.bean.injection.Helm" />
	<bean id="TimeWarnerCableTvProvider" class="org.baeldung.bean.injection.tv.TimeWarnerCableTvImpl" />
	<bean id="VerizonFiosTvProvider" class="org.baeldung.bean.injection.tv.VerizonFiosTvImpl" />

</beans>