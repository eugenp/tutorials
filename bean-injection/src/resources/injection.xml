<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.3.xsd">
    <context:annotation-config/>
    <context:component-scan base-package="baeldung.java_bean_injection" />
 
	<bean id="injection" class="baeldung.java_bean_injection.InjectedClass">
		<!--<constructor-arg index="0" type="long" value="100"/>-->
		<constructor-arg index="0" type="int" value="1"/>
		<constructor-arg index="1" type="java.lang.String" value="test"/>
		
		<!--  
		<constructor-arg index="3"  ref="constructorObject"/>
		<property name="injectedObject" ref="injectedObject"/>
		<property name="myString" value="test"/>
		<property name="myInt" value="0"/>
		-->
	</bean>
		
	<bean id="wiredObject" class="baeldung.java_bean_injection.WiredObject">
	</bean>
	
	<bean id="constructorObject" class="baeldung.java_bean_injection.ConstructorObject">
	</bean>
	
	<bean id="injectedObject" class="baeldung.java_bean_injection.InjectedObject">
	</bean>
	
</beans>