    <properties>
        <jstl.version>1.2</jstl.version>
        <jaxb-runtime.version>4.0.1</jaxb-runtime.version>
        <jakarta.servlet.jsp.jstl.version>2.0.0</jakarta.servlet.jsp.jstl.version>
        <rest-assured.version>5.5.0</rest-assured.version>
