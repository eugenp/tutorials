<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernate-tutorial</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<!--  -->
		<property name="hbm2ddl.auto">update</property> <!-- create update validate-->

		<!--		<mapping resource="com/domain/Department.hbm.xml"/>
                <mapping resource="com/domain/Employee.hbm.xml"/>-->
		<mapping resource="com/domain/IdCard.hbm.xml"/>
		<mapping resource="com/domain/Person.hbm.xml"/>
		<mapping resource="com/domain1/User.hbm.xml"/>
		<mapping resource="com/domain1/Address.hbm.xml"/>
	</session-factory>
</hibernate-configuration>