<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
 
	<bean id="messageService" class="com.baeldung.spring.XMLTest.MessageService"></bean>
	
	<bean id="orderValidationService" class="com.baeldung.spring.XMLTest.OrderValidationService"></bean>
	
	
	<bean id="orderService" class="com.baeldung.spring.XMLTest.OrderService">
		<property name="messageService" ref="messageService"></property>
		<constructor-arg index = "0" ref = "orderValidationService"/>
	</bean>
	
	
</beans>
