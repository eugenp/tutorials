<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="surface" class="com.baeldung.beaninjectiontypes.Surface">
	</bean>
	
	<bean id="graphics" class="com.baeldung.beaninjectiontypes.Graphics">
		<constructor-arg ref="surface"></constructor-arg>
	</bean>
	
	<bean id="shape" class="com.baeldung.beaninjectiontypes.Shape">
		<property name="graphics" ref="graphics"></property>
	</bean>
	
</beans>