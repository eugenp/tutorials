<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
    <context:component-scan base-package="com.baeldung.inject.xml"/>

    <beans>
        <bean class="com.baeldung.inject.xml.SomeService">
            <property name="a" ref="a"/>
            <property name="b" ref="b"/>
        </bean>

        <bean name="a" class="com.baeldung.inject.xml.AnotherService"/>
        <bean name="b" class="com.baeldung.inject.xml.AnotherService"/>
    </beans>

</beans>
