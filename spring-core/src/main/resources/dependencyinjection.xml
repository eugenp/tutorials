<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="airConditioner" class="com.baeldung.dependencyinjection.domain.AirConditioner" />

	<bean id="escalator" class="com.baeldung.dependencyinjection.domain.Escalator" />

	<bean id="building" class="com.baeldung.dependencyinjection.domain.Building">
		<constructor-arg ref="escalator" />
		<property name="airConditioner">
			<ref bean="airConditioner" />
		</property>
	</bean>

</beans>
