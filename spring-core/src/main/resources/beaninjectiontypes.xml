<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="computerConstructorInjection" class="com.baeldung.beaninjectiontypes.domain.ComputerConstructorInjection">
        <constructor-arg index="0" ref="cpu"/>
        <constructor-arg index="1" ref="ram"/>
    </bean>
    
    <bean id="computerSetterInjection" class="com.baeldung.beaninjectiontypes.domain.ComputerSetterInjection">
        <property name="cpu" ref="cpu" />
        <property name="ram" ref="ram" />
    </bean>

    <bean id="cpu" class="com.baeldung.beaninjectiontypes.domain.CPU">
        <constructor-arg index="0" value="cpu1"/>
        <constructor-arg index="1" value="Intel"/>
    </bean>

    <bean id="ram" class="com.baeldung.beaninjectiontypes.domain.RAM">
        <constructor-arg index="0" value="ram1"/>
        <constructor-arg index="1" value="8GB"/>
    </bean>

</beans>