<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userRepository" class="com.baeldung.di.UserRepository"/>
    <bean id="productService" class="com.baeldung.di.ProductService"/>

    <bean id="userService" class="com.baeldung.di.UserService">
        <constructor-arg ref="userRepository"/>
    </bean>

    <bean id="orderService" class="com.baeldung.di.OrderService">
        <constructor-arg ref="userService"/>
        <constructor-arg ref="productService"/>
    </bean>

    <bean id="authenticationService" class="com.baeldung.di.AuthenticationService">
        <property name="userService" ref="userService"/>
    </bean>
</beans>