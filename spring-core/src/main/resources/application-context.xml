<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="addressDetails" class="com.baeldung.dependency.AddressDetails" />

	<bean id="payDetails" class="com.baeldung.dependency.PayDetails" />

	<bean id="departmentDetails" class="com.baeldung.dependency.DepartmentDetails" />

	<bean id="employee" class="com.baeldung.dependency.Employee">
		<constructor-arg ref="addressDetails" />
	</bean>

</beans>