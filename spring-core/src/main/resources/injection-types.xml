<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="dependency" class="com.baeldung.injectiontypes.Dependency"/>

    <bean id="serviceThroughConstructor" class="com.baeldung.injectiontypes.ServiceThroughConstructor">
        <constructor-arg ref="dependency"/>
    </bean>

    <bean id="serviceThroughSetter" class="com.baeldung.injectiontypes.ServiceThroughSetter">
        <property name="dependency" ref="dependency"/>
    </bean>

</beans>