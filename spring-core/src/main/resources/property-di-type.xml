<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="doctor" class="com.baeldung.di.types.xml.Doctor">
        <property name="name" value="Paul"/>
        <property name="branch" value="Cardiologist"/>
    </bean>

    <bean id="patient" class="com.baeldung.di.types.xml.Patient">
        <property name="id" value="1"/>
        <property name="name" value="Raul"/>
    </bean>

    <bean id="reservation" class="com.baeldung.di.types.xml.Appointment">
        <property name="doctor" ref="doctor"/>
        <property name="patient" ref="patient"/>
    </bean>

    <bean id="department" class="com.baeldung.di.types.xml.Department">
        <property name="departmentId" value="123"/>
        <property name="secretary">
            <bean class="com.baeldung.di.types.xml.Secretary">
                <property name="floor" value="4"/>
                <property name="employee">
                    <bean class="com.baeldung.di.types.xml.Employee">
                        <property name="name" value="Sophie"/>
                        <property name="surname" value="Mark"/>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="employeeAliBaba" class="com.baeldung.di.types.xml.Employee"
          p:name="Ali"
          p:surname="Baba"/>

    <bean id="secretary" class="com.baeldung.di.types.xml.Secretary"
          p:floor="3"
          p:employee-ref="employeeAliBaba"/>
</beans>