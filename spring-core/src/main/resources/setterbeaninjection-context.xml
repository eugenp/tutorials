<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="textMessage" class="com.baeldung.beaninjection.TextMessage" />
	<bean id="messageSender" class="com.baeldung.beaninjection.setterbased.MessageSender">
		<constructor-arg index="0"
			type="com.baeldung.beaninjection.ChatMessage" name="message" ref="textMessage" />
	</bean>

</beans>