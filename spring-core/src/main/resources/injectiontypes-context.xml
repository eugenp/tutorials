<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	   xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<context:annotation-config />

	<bean name="hotelService" class="com.baeldung.dependency.injectiontypes.HotelService">
		<constructor-arg value="roomService" />
	</bean>

	<bean name="bedService" class="com.baeldung.dependency.injectiontypes.BedService"/>

	<bean name="RoomService" class="com.baeldung.dependency.injectiontypes.RoomService">
		<property name="bedService" ref="bedService"></property>
	</bean>
	
</beans>