<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="com.baeldung.definition.domain.Person">
        <property name="fullName" value="John Doe"/>
        <property name="address" ref="address"/>
    </bean>

    <bean id="address" class="com.baeldung.definition.domain.Address">
        <constructor-arg name="street" value="Pennsylvania Avenue"/>
        <constructor-arg name="number" value="1600"/>
    </bean>
</beans>