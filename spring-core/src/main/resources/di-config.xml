<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="paymentService" class="com.baeldung.evaluation.di.example.PaymentService">
		<constructor-arg ref="payment" />
		<property name="details" ref="details" />
	</bean>

	<bean id="payment" class="com.baeldung.evaluation.di.example.CashPayment">
	</bean>

	<bean id="details" class="com.baeldung.evaluation.di.example.Details">
		<property name="paymentReason" value="Installment" />
	</bean>

</beans>
