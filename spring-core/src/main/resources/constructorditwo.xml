<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="music" class="com.baeldung.constructorditwo.domain.Music">
        <constructor-arg index="0" ref="artist" />
        <constructor-arg index="1" ref="song" />
    </bean>

    <bean id="artist" class="com.baeldung.constructorditwo.domain.Artist">
        <constructor-arg index="0" value="Yo-Yo Ma" />
        <constructor-arg index="1" value="61" />
    </bean>

    <bean id="song" class="com.baeldung.constructorditwo.domain.Song">
        <constructor-arg value="Joy to the World" />
    </bean>

</beans>
