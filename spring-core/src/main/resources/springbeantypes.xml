<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!--Constructor Based DI Injection -->

	<bean id="C" class="java.lang.String">
		<constructor-arg value="Contractual" />
	</bean>
	<bean id="P" class="java.lang.String">
		<constructor-arg value="Permanent" />
	</bean>

	<bean id="Worker" class="com.baeldung.beantypes.Employee">
		<constructor-arg type="long">
			<value>10000</value>
		</constructor-arg>
		<constructor-arg type="String">
			<ref local="C" />
		</constructor-arg>
	</bean>

	<!--Setter Based DI Injection -->
	<bean id="object" class="com.baeldung.beantypes.Employee"
		p:salary="30000" p:type="Permanent" p:title="Manager">
	</bean>


</beans>
