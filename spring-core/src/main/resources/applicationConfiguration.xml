<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans -->

    <bean id="localWeatherUpdate" class="com.practice.spring.LocalWeatherUpdate" />

    <bean id="hourlyNews" class="com.practice.spring.HourlyNews">

        <!-- Constructor based bean injection -->
        <!--<constructor-arg ref="localWeatherUpdate" />-->

        <!-- Setter method bean injection -->
        <property name="weatherUpdate" ref="localWeatherUpdate" />
    </bean>
</beans>